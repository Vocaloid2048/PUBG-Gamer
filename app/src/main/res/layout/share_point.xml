<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#000000"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/share_bk_272729"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:text="請選擇分享方法"
            android:textColor="@color/background"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.153"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.101" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="18dp"
            android:layout_height="201dp"
            android:textColor="@color/background"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="64dp"
                android:layout_weight="0"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/whatsapp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:background="#00FFFFFF"
                    android:foreground="@drawable/ic_whatsapp" />

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" />

                <Button
                    android:id="@+id/facebook"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:background="#00FFFFFF"
                    android:foreground="@drawable/ic_facebook" />

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" />

                <Button
                    android:id="@+id/instagram"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:background="#00FFFFFF"
                    android:foreground="@drawable/ic_instagram" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/whatsapp_txt"
                    android:layout_width="64dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:text="Whatsapp"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" />

                <TextView
                    android:id="@+id/facebook_txt"
                    android:layout_width="64dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:text="Facebook"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" />

                <TextView
                    android:id="@+id/instagram_txt"
                    android:layout_width="64dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:text="Instagram"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/back"
            android:layout_width="240dp"
            android:layout_height="24dp"
            android:background="@drawable/action_bar_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>